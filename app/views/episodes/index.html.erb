<p id="notice"><%= notice %></p>

<h1>Listing Episodes</h1>

<table>
  <thead>
    <tr>
      <th>Video</th>
      <th>Game</th>
      <th>Show</th>
      <th>Title</th>
      <th>Part</th>
      <th>Duration</th>
      <th>Thumbnail url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.video_id %></td>
        <td><%= episode.game %></td>
        <td><%= episode.show %></td>
        <td><%= episode.title %></td>
        <td><%= episode.part %></td>
        <td><%= episode.duration %></td>
        <td><%= episode.thumbnail_url %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

